package com.gut.core.adb.dump;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Node {

    protected Node mParent;

    protected final List<Node> mChildren = new ArrayList<Node>();

    public int x, y, width, height;

    protected boolean mHasBounds = false;

    public void addChild(Node child) {
        if(child == null) { return; }
        if(mChildren.contains(child)) { return; }
        
        mChildren.add(child);
        child.mParent = this;
    }
    
    public Node getParent() {
        return mParent;
    }

    public boolean hasChild() { return mChildren.size() > 0; }
    public int getChildCount() { return mChildren.size(); }
    
    public List<Node> getChildrenList() {
        return Collections.unmodifiableList(mChildren);
    }
    public Node[] getChildren() {
        return mChildren.toArray(new Node[0]);
    }

    public void clearAllChildren() {
        for(Node child : mChildren) { child.clearAllChildren(); }
        mChildren.clear();
    }

    public boolean isAt(int px, int py) {
    	return x <= px && px <= x+width && y <= py && py <= y+height;
    }
    public Node getLeafMostNodeAt(int px, int py) {
    	for(Node node : mChildren) {
        	Node found = node.getLeafMostNodeAt(px, py);
        	if(found != null) return found; 
        }
        
    	if(mHasBounds) {
            if(isAt(px, py)) { return this; } 
            else { return null; }
        } 
    	else {
            return null;
        }
    }

	public String getAttribute(String string) {
		// TODO Auto-generated method stub
		return null;
	}
    public AttributePair[] getAttributePairs() {
    	return new AttributePair[0];
    }

	public List<Node> getAllClickableNodes() {
		// TODO Auto-generated method stub
		return null;
	}

}
