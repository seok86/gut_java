	protected void createList(TableViewer tableViewer) {
		tableViewer.getTable().setHeaderVisible(true);
		tableViewer.setContentProvider(ArrayContentProvider.getInstance());
		
		TableViewerColumn colId = new TableViewerColumn(tableViewer, SWT.NONE);
		colId.getColumn().setWidth(100);
		colId.getColumn().setText("id");
		colId.setLabelProvider(new ColumnLabelProvider() {
			@Override
			public String getText(Object element) { return element.toString(); }
		});
		
		TableViewerColumn colValue = new TableViewerColumn(tableViewer, SWT.NONE);
		colValue.getColumn().setWidth(100);
		colValue.getColumn().setText("id");
		colValue.setLabelProvider(new ColumnLabelProvider() {
			@Override
			public String getText(Object element) { return element.toString(); }
		});
	}

	@Override
	public void setFocus() {
		System.out.println("setFocus");
	}

}
